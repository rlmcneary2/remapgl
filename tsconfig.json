{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "types": ["mapbox-gl"],
    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": [
    "src/*.tsx",
    "dist"
  ],
  "include": [
    "src"
  ]
}
